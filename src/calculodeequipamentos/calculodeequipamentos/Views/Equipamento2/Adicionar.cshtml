@using WebApplication2.Models;
@model EquipamentoModel
@{
    ViewData["Title"] = "Adicionar novo Equipamento";
}


<!DOCTYPE html>
<html>
<head>
    <title>Adicionar novo Equipamento</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="calculadora">
        <h1>Adicionar novo Equipamento:</h1>
        <form class="form-calc" asp-controller="Equipamento" asp-action="RegistrarResultado" method="post">
            <div class="form-group">
                <label class="label-calc" for="nome">Nome do Equipamento:</label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome do Equipamento" type="text">
            </div>
            <div class="form-group">
                <label class="label-calc" for="khw">Potência do Equipamento (em watts):.</label>
                <input asp-for="Khw" class="form-control" placeholder="Digite a potência do Equipamento" type="number">
            </div>
            <div class="form-group">
                <label class="label-calc" for="tempo">Tempo de Uso (em horas):</label>
                <input asp-for="Tempo" class="form-control" placeholder="Digite o Tempo de Uso do Equipamento" type="number">
            </div>
            <div class="form-group">
                <label class="label-calc" for="quantidade">Quantidade de equipamentos:</label>
                <input asp-for="Quantidade" class="form-control" placeholder="Digite a quantidade de equipamentos" type="number">
            </div>
            <div class="form-group">
                <input asp-for="Consumo" class="form-control" type="hidden">
            </div>

            <p id="resultado"></p>
            <button class="button-calcular" onclick="calcularConsumo()" type="button">Adicionar Equipamento</button>
            <button asp-controller="Home" asp-action="Index" class="button-calcular" type="submit">Voltar</button>
        </form>
    </div>
    <script>
        function calcularConsumo() {
            var nome = document.getElementsByName("Nome")[0].value;
            var khw = parseFloat(document.getElementsByName("Khw")[0].value);
            var tempo = parseFloat(document.getElementsByName("Tempo")[0].value);
            var quantidade = parseFloat(document.getElementsByName("Quantidade")[0].value);


            var consumo = (khw * tempo * quantidade) / 1000;

            document.getElementById("resultado").innerHTML = "O consumo total de " + quantidade + " equipamentos " + nome + " em " + tempo + " horas é de " + consumo.toFixed(2) + " kWh.";
            document.getElementsByName("Consumo")[0].value = consumo.toFixed(2);

            fetch('/EquipamentoEletronico', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    Nome: nome,
                    Khw: khw,
                    Tempo: tempo,
                    Quantidade: quantidade,

                    Consumo: consumo.toFixed(2)


                })
            })

        }

    </script>
</body>
</html>