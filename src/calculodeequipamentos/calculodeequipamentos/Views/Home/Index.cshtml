@{
    ViewData["Title"] = "Calculadora";
}

<!DOCTYPE html>
<html>
<head>
	<title>Calculadora de Consumo de Eletrônicos</title>
</head>
<body>
	<h1>Calculadora de Consumo de Eletrônicos</h1>
	<form>
		<label for="nome">Nome do Equipamento:</label>
		<input type="text" id="nome">

		<label for="potencia">Potência do Equipamento (em watts):</label>
		<input type="number" id="potencia">

		<label for="tempo">Tempo de Uso (em horas):</label>
		<input type="number" id="tempo">

		<button type="button" onclick="calcularConsumo()">Calcular Consumo</button>
	</form>

	<p id="resultado"></p>

	<script>
		function calcularConsumo() {
			var nome = document.getElementById("nome").value;
			var potencia = parseFloat(document.getElementById("potencia").value);
			var tempo = parseFloat(document.getElementById("tempo").value);

			var consumo = (potencia * tempo) / 1000;

			document.getElementById("resultado").innerHTML = "O consumo do equipamento " + nome + " em " + tempo + " horas é de " + consumo.toFixed(2) + " kWh.";
		}
	</script>
</body>
</html>
