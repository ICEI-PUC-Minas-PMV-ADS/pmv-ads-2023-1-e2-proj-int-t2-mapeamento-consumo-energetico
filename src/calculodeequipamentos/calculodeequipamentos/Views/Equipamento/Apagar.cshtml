﻿﻿@{
    ViewData["Title"] = "Apagar equipamento";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - calculodeequipamentos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</head>
<div class="text-center">
    <h3>Deseja apagar este equipamento?</h3>

</div>
<div class="text-center">
<a class="btn btn-primary btn-block" role="button" asp-controller="Equipamento" asp-action="Index">Cancelar</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Equipamento" asp-action="ApagarReal" method="post">Confirmar</a>
</div>