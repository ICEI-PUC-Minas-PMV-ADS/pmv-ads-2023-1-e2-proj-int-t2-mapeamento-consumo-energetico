@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">

        <link href="~/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/css/bootstrap.rtl.min.css" rel="stylesheet" />
        <link href="~/css/bootstrap.rtl.css" rel="stylesheet" />
        <link href="~/css/bootstrap.css" rel="stylesheet" />
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h7>Crie uma nova conta.</h7>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3 mt-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 mt-3">
                <input asp-for="Input.Nome" class="form-control" autocomplete="name" aria-required="true" />
                <label asp-for="Input.Nome"></label>
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 mt-3">
                <input asp-for="Input.Sobrenome" class="form-control" autocomplete="family-name" aria-required="true" />
                <label asp-for="Input.Sobrenome"></label>
                <span asp-validation-for="Input.Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 mt-3">
                <input asp-for="Input.Telefone" class="form-control" autocomplete="phone" aria-required="true" />
                <label asp-for="Input.Telefone"></label>
                <span asp-validation-for="Input.Telefone" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 mt-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
