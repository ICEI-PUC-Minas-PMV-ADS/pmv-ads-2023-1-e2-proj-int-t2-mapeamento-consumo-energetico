@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Dados pessoais";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/css/bootstrap.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-6">
        <p>
            Sua conta contém dados pessoais que você nos forneceu. Esta página permite que você baixe ou exclua esses dados.
        </p>
        <p>
            <strong>
                Excluir esses dados removerá permanentemente sua conta e isso não poderá ser recuperado.
            </strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Excluir</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
